            1: {
                title: "Class 1 (CBSE)",
                description: "Class 1 subjects as per CBSE. Beginner level with PDF resources.",
                subjects: [
                    { name: "Mathematics", icon: "fas fa-calculator" },
                    { name: "English", icon: "fas fa-language" },
                    { name: "Hindi", icon: "fas fa-book" },
                    { name: "EVS", icon: "fas fa-leaf" }
                ]
            }
        };
        
        // Modal elements
        const subjectsModal = document.getElementById('subjectsModal');
        const modalClassTitle = document.getElementById('modalClassTitle');
        const modalClassDescription = document.getElementById('modalClassDescription');
        const subjectsList = document.getElementById('subjectsList');
        const closeModalBtn = document.getElementById('closeModal');
        
        // Function to open modal with class data
        function openClassModal(classNumber) {
            const classInfo = classData[classNumber];
            
            if (!classInfo) return;
            
            // Update modal title
            modalClassTitle.textContent = classInfo.title;
            
            // Update modal description
            modalClassDescription.innerHTML = `
                <div class="subjects-info">
                    <p>${classInfo.description}</p>
                    <p><strong>Note:</strong> All subjects have two downloadable PDFs - Formulas/Notes and Sample Admit Card.</p>
                </div>
            `;
            
            // Clear and update subjects list with PDF links
            subjectsList.innerHTML = '';
            classInfo.subjects.forEach(subject => {
                const subjectCard = document.createElement('div');
                subjectCard.className = 'subject-card';
                subjectCard.innerHTML = `
                    <i class="${subject.icon}"></i>
                    <h4>${subject.name}</h4>
                    <div class="subject-links">
                        <a href="${formulaPdfLink}" target="_blank" class="pdf-link">
                            <i class="fas fa-file-pdf"></i> Formulas/Notes
                        </a>
                        <a href="${admitCardPdfLink}" target="_blank" class="pdf-link">
                            <i class="fas fa-id-card"></i> Sample Admit Card
                        </a>
                    </div>
                `;
                subjectsList.appendChild(subjectCard);
            });
            
            // Show modal
            subjectsModal.style.display = 'flex';
            document.body.style.overflow = 'hidden';
        }
        
        // Function to close modal
        function closeModal() {
            subjectsModal.style.display = 'none';
            document.body.style.overflow = 'auto';
        }
        
        // Event listeners for class cards
        document.querySelectorAll('.class-card').forEach(card => {
            card.addEventListener('click', function() {
                const classNumber = this.getAttribute('data-class');
                openClassModal(classNumber);
            });
        });
        
        // Event listeners for footer class links
        document.querySelectorAll('.footer-links a[data-class]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                const classNumber = this.getAttribute('data-class');
                openClassModal(classNumber);
                
                // Close mobile menu if open
                if (mainNav.classList.contains('active')) {
                    mainNav.classList.remove('active');
                    const icon = mobileMenuBtn.querySelector('i');
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                }
            });
        });
        
        // Close modal events
        closeModalBtn.addEventListener('click', closeModal);
        subjectsModal.addEventListener('click', function(e) {
            if (e.target === subjectsModal) {
                closeModal();
            }
        });
        
        // Close modal with Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape' && subjectsModal.style.display === 'flex') {
                closeModal();
            }
        });
        
        // Smooth scrolling for navigation links
        document.querySelectorAll('nav a').forEach(anchor => {
            anchor.addEventListener('click', function(e) {
                e.preventDefault();
                
                const targetId = this.getAttribute('href');
                const targetSection = document.querySelector(targetId);
                
                window.scrollTo({
                    top: targetSection.offsetTop - 80,
                    behavior: 'smooth'
                });
                
                // Close mobile menu if open
                if (mainNav.classList.contains('active')) {
                    mainNav.classList.remove('active');
                    const icon = mobileMenuBtn.querySelector('i');
                    icon.classList.remove('fa-times');
                    icon.classList.add('fa-bars');
                }
            });
        });
        
        // Direct PDF links in footer
        document.querySelectorAll('a[href*="file:///"]').forEach(link => {
            link.addEventListener('click', function(e) {
                // For local file links, we'll let them open
                console.log('Opening PDF:', this.href);
            });
        });
    </script>
